# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

NODE_ENV=production
PORT=3000

# Database Configuration
# Get these values from your DigitalOcean PostgreSQL dashboard
DATABASE_URL=postgresql://username:password@host:port/database
DB_HOST=your-postgres-host
DB_PORT=25060
DB_NAME=georgia_connects_hub
DB_USERNAME=your-username
DB_PASSWORD=your-password

# Redis Configuration (local on droplet)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-generate-new-one
JWT_EXPIRES_IN=7d

# CORS Configuration
# Update with your frontend domain(s) - comma separated for multiple origins
CORS_ORIGIN=https://your-frontend-app.ondigitalocean.app
ALLOWED_ORIGINS=https://your-frontend-app.ondigitalocean.app

# Email Configuration (if using email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Socket.io Configuration
SOCKET_CORS_ORIGIN=https://your-frontend-app.ondigitalocean.app
FRONTEND_URL=https://your-frontend-app.ondigitalocean.app
